<Window x:Class="Adaconda.View.ModelManager.PLCProgarm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Adaconda.View.ModelManager"
        mc:Ignorable="d"
        Title="PLCProgarm" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <ToolBar BorderBrush="LightSlateGray">
            <Button Name="btnOpen" Width="30" Height="30" Margin="5">
                <Image Source="\Resource\Icon\openfile.png" Width="29" Height="30" Margin="-3,-3,0,0" ToolTip="Open"/>
            </Button>
            <Button Name="btnSave" Width="30" Height="30" Margin="10,0,0,0">
                <Image Source="\Resource\Icon\save.png" Width="30" Height="30" Margin="-3,-3,0,0" ToolTip="Save"/>
            </Button>
            
        </ToolBar>
    </Grid>
</Window>
